{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "version": "0.0.2",
  "name": "nasio-block/gallery-slider",
  "title": "Gallery Slider",
  "category": "nasio-blocks",
  "icon": "images-alt2",
  "description": "Create a beautiful slider from your gallery images.",
  "keywords": [
    "slider",
    "gallery",
    "images",
    "slideshow"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "nasio-blocks",
  "attributes": {
    "images": {
      "type": "array",
      "default": []
    },
    "ids": {
      "type": "array",
      "default": []
    },
    "slidesPerView": {
      "type": "number",
      "default": 3
    },
    "spaceBetween": {
      "type": "number",
      "default": 20
    },
    "loop": {
      "type": "boolean",
      "default": true
    },
    "autoplay": {
      "type": "boolean",
      "default": false
    },
    "autoplayDelay": {
      "type": "number",
      "default": 3000
    },
    "showDots": {
      "type": "boolean",
      "default": true
    },
    "showArrows": {
      "type": "boolean",
      "default": true
    },
    "draggable": {
      "type": "boolean",
      "default": true
    },
    "showCaptions": {
      "type": "boolean",
      "default": true
    },
    "linkTo": {
      "type": "string",
      "default": "none"
    },
    "imageSizeSlug": {
      "type": "string",
      "default": "large"
    },
    "slidesPerGroup": {
      "type": "number",
      "default": 1
    },
    "backgroundColor": {
      "type": "string"
    },
    "sliderWidth": {
      "type": "string",
      "default": ""
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js"
}