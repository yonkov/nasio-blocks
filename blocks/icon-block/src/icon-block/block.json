{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"version": "0.0.1",
	"name": "nasio-block/icon-block",
	"title": "Icon Block",
	"category": "nasio-blocks",
	"icon": "star-filled",
	"description": "Add an icon with customizable size and link options.",
	"keywords": ["icon", "symbol", "button"],
	"supports": {
		"html": false,
		"align": true,
		"color": {
			"background": true,
			"text": true,
			"gradients": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"typography": {
			"fontSize": true
		},
		"spacing": {
			"padding": true,
			"margin": true
		}
	},
	"textdomain": "nasio-blocks",
	"attributes": {
		"icon": {
			"type": "string",
			"default": "starFilled"
		},
		"iconSize": {
			"type": "number",
			"default": 24
		},
		"url": {
			"type": "string",
			"default": ""
		},
		"linkTarget": {
			"type": "string",
			"default": "_self"
		},
		"rel": {
			"type": "string",
			"default": ""
		},
		"backgroundColor": {
			"type": "string",
			"default": ""
		},
		"textColor": {
			"type": "string",
			"default": ""
		},
		"borderRadius": {
			"type": "number",
			"default": 0
		},
		"padding": {
			"type": "number",
			"default": 8
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
